# Odyssey Runner Service - Environment Configuration
# Copy this file to .env and fill in your values

# ==============================================================================
# REQUIRED - Supabase Connection (Orchestrator Database)
# ==============================================================================

# Your Supabase project URL
ORCHESTRATOR_SUPABASE_URL=https://your-project.supabase.co

# Supabase service role key (not anon key!)
# This key has full access to your database
ORCHESTRATOR_SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ==============================================================================
# QUEUE PROCESSING
# ==============================================================================

# Polling interval in milliseconds when queue is empty
# Default: 5000 (5 seconds)
POLL_INTERVAL_MS=5000

# Number of jobs to fetch per batch
# Default: 5
BATCH_SIZE=5

# Visibility timeout in seconds
# How long a job is hidden after being read
# If not acknowledged within this time, it becomes visible again for retry
# Default: 300 (5 minutes)
VISIBILITY_TIMEOUT_SECONDS=300

# Maximum number of retry attempts before marking job as permanently failed
# Default: 3
MAX_RETRIES=3

# ==============================================================================
# HEALTH CHECK SERVER
# ==============================================================================

# Enable/disable health check HTTP server
# Default: true
HEALTH_CHECK_ENABLED=true

# Port for health check server
# Default: 8080
HEALTH_CHECK_PORT=8080

# ==============================================================================
# OPTIONAL
# ==============================================================================

# Node environment
# Values: development, production, test
NODE_ENV=development

# Logging level
# Values: debug, info, warn, error
LOG_LEVEL=info
